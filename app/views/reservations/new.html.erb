<div class="reservations-wrapper">
    <div class="form-wrapper">
        <div class="contents-wrapper">
            <p class="top-contents">予約確認</p>
        </div>
        <p class="price_navi">¥<%= params[:p1_price] %>/日</p>

        <%= form_with(model:@reservations,url: "") do |f| %>
            <div class="contents-wrapper">
                <div class="contents-row">
                    <label class="span-contents">開始日 </label>
                    <div class="email-contents">
                    <%= f.date_field :start_date,value:params[:start_date],readonly: true %>
                    </div>
                </div>
            </div>

            <div class="contents-wrapper">
                <div class="contents-row">
                    <label class="span-contents">終了日 </label>
                    <div class="email-contents">
                    <%= f.date_field :end_date, value:params[:end_date],readonly: true %>
                    </div>
                </div>
            </div>

            <div class="contents-wrapper">
                <div class="contents-row">
                    <label class="span-contents">1人/1泊の金額 </label>
                    <div class="email-contents">
                    <p><%= f.number_field :p1_price ,class:"room_form",value:params[:p1_price],readonly: true %></p>
                    </div>
                </div>
            </div>

            <div class="contents-wrapper">
                <div class="contents-row">
                    <label class="span-contents">人数 </label>
                    <div class="email-contents">
                    <%= f.number_field :people ,class:"room_form",value:params[:people],readonly: true %>
                    </div>
                </div>
            </div>

            <div class="contents-wrapper">
                <div class="contents-row">
                    <label class="span-contents">合計金額 </label>
                    <div class="email-contents">
                    <%= f.number_field :total_price ,class:"room_form",value: params[:p1_price].to_i * params[:people].to_i * ((params[:end_date].to_date) - (params[:start_date].to_date)).to_i,readonly: true %>
                    </div>
                </div>
            </div>

            <div class="contents-wrapper">
                <p class="top-contents">
                    <%= f.submit "予約する",class:"login-btn btn"  %>
                </p>
            </div>
        <%end%>
    </div>
</div>
