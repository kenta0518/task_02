<div class="top-container">
    <div class="center-container">
        <div class="flex">
            <div class="form_container">
                <h1 class="container_text">Potepan Shareでまだ体験したことのない旅をしよう</h1>
                <p>エリアorキーワード</p>
                <div class="container-form">
                    <%= form_with(url: posts_search_path,method: :get,local: true) do |f|%>
                        <%= f.text_field :search, placeholder:"エリア" %>
                        <%= f.submit '検索する', name: nil %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="middle">
    <div class=recomendContainer>
        <h1>おすすめエリア</h1>
        <ul class="area-imgs">
            <div class="link_img">
            <%= link_to posts_search_path(search: "東京")do %> 
            <li><span>東京</span><img class="areaImg" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_tokyo.jpg"></li>
            <% end %></div>
            <div class="link_img">
            <%= link_to posts_search_path(search: "大阪") do %> 
            <li><span>大阪</span><img class="areaImg" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_osaka.jpg"></li>
            <% end %></div>
            <div class="link_img">
            <%= link_to posts_search_path(search: "京都") do %> 
            <li><span>京都</span><img class="areaImg" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_kyoto.jpg"></li>
            <% end %></div>
            <div class="link_img">
            <%= link_to posts_search_path(search: "札幌") do %> 
            <li><span>札幌</span><img class="areaImg" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_sapporo.jpg"></li>
            <% end %></div>
        </ul>
    </div>
</div>







