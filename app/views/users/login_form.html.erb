<%= form_with(url: login_path, local: true) do |f| %>
    <div class="form-container">
        <div class="form-main">
            <h3>ログイン</h3>
            <% if @error_message %>            
                <div class="form-error">            
                    <%= @error_message %>            
                </div>            
            <% end %>
                <div class="form-inner">
                    <div class="form-group">
                        <span class="form-red">必須</span>
                        <%= f.text_field :email,placeholder: "メールアドレス",value: @email, class:'form-one' %>
                    </div>
                    <div class="form-group">
                        <span class="form-red">必須</span>
                        <%= f.password_field :password,placeholder: "パスワード",value:@password ,class:'form-one' %>
                    </div>
                </div>
            <%= f.submit 'ログイン', class: 'btn login-btn login-btn-a' %>
            <p class="login-btn-b"><a href="signup">新しいアカウントを作成</a></p>
        </div>
    </div>
<% end %>