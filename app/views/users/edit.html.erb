<%= form_with model:@users do |f| %>
    <div class="form-container">
        <div class="form-main">
            <p>アカウントを編集</p>
            <%= flash[:notice] %>
                <div class="form-inner">
                    <div class="form-group">
                        <%= f.text_field :email,value: @user.email,class:'form-one'%>
                    </div>
                    <div class="form-group">
                        <%= f.password_field :password,placeholder: "パスワード",class:'form-one' %>
                    </div>
                    <div class="form-group">
                        <%= f.password_field :password_confirmation,placeholder: "パスワード（確認）",class:'form-one' %>
                    </div>
                    <div class="form-group">
                        <%= f.password_field :password,placeholder: "パスワード（確認）",class:'form-one' %>
                    </div>
                </div>    
            <%= f.submit '編集する',class: 'btn login-btn login-btn-a' %>
        </div>
    </div>
<% end %>